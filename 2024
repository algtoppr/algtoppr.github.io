  <script>
    $(function(){
      $("#includedContent--about").load("about.html"); 
      $("#includedContent--speakers").load("speakers.html");
      $("#includedContent--organizers").load("organizers.html");
    });

    function setSectionMargins() {
      var titledata = $("#algtoppr-title").get(0).getBoundingClientRect();
      var windoww = $(window).width();
      $(".section__content--narrow").css({'margin-left': `${(windoww - titledata.width)/2}px`});
      $(".section__content--narrow").css({'margin-right': `${(windoww - titledata.width)/2}px`});
    };

    const scrollToSection = (sectionId) => {
      console.log("Scrolling to", sectionId);
      $('.scroller').animate({
          scrollTop: $("#" + sectionId).position().top
      });
    };
$(document).ready(function() {
  // Load all content and setup event delegation when all content is loaded
  Promise.all([
    loadContent("about.html", "#includedContent--about"),
    loadContent("speakers.html", "#includedContent--speakers"),
    loadContent("organizers.html", "#includedContent--organizers")
  ]).then(function() {
    setSectionMargins();
    setNavigationClickHandler();
  });

  // Initial setup of event delegation
  setSectionMargins();
  setNavigationClickHandler();

  $(window).resize(function() {
    setSectionMargins();
  });
});

function loadContent(url, target) {
  return new Promise(function(resolve) {
    $(target).load(url, function() {
      resolve();
    });
  });
}

function setNavigationClickHandler() {
  // Event delegation for navigation clicks
  $('#navbar ul.navbar-right').off('click', 'li'); // Remove existing click handlers
  $('#navbar ul.navbar-right').on('click', 'li', function() {
    var sectionId = $(this).attr('id').replace('navbutton', '');
    scrollToSection('algtoppr-' + sectionId);
  });
}

function hambClickFunction () {
  var x = document.getElementById("navmenu");
  if (x.className === "") {
    x.className += "responsive";
  } else {
    x.className = "";
  }
}
function navItemClickFunction() {
  var x = document.getElementById("navmenu");
  x.className = "";
}
